<div class="centered">

  <h2 class="centered-text">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label table-display">
      <%= f.text_field :email, class:'mdl-textfield__input', type:'email', autofocus:true %>
      <%= f.label :email, "Email", class: "mdl-textfield__label", for:"email" %>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label table-display">
      <%= f.text_field :password, class:'mdl-textfield__input', type:'password', autocomplete: "off" %>
      <%= f.label :password, "Password (#{@minimum_password_length} characters minimum)", class: "mdl-textfield__label", for:"password" %>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label table-display">
      <%= f.text_field :password_confirmation, class:'mdl-textfield__input', type:'password',autocomplete: "off" %>
      <%= f.label :password_confirmation, "Password Confirmation", class: "mdl-textfield__label", for:"password_confirmation" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up!", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored margined"%>
    </div>
    <% end %>

  <%= render "devise/shared/links" %>
</div>
